$(function () {
    var oilprices =   {{ datarec }}

    $.plot($("#placeholder"),
           [ { data: oilprices, label: "Давление" }],
           { 
//             xaxis: { mode: 'time' },
             yaxis: { min: 0 },
             y2axis: { tickFormatter: function (v, axis) { return v.toFixed(axis.tickDecimals) +"€" }},
             legend: { position: 'sw' } ,
             series: { lines: { show: false }, points: { show: true } }});
             

});
